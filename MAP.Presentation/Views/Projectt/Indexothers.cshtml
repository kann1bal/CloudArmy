@model IEnumerable<MAP.Presentation.Models.ProjectVM>

@{
    Layout = "~/Views/Shared/LayoutTeamLeader.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")|

    </p>

    <div class="span9">
        <div class="content">

            <div class="module">
                <div class="module-head">
                    <h3>Meetings List</h3>
                    <p class="align-right"><button class="add-on"></button></p>
                </div>
                <div class="module-body">

                    <table class="table">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.ProjectId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OutDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ProjectId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>@Html.DisplayFor(modelItem => item.OutDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ImageUrl)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |

                                      


                                    </td>


                                </tr>
                            }


                        </tbody>
                    </table>

                    <br />
                    <!-- <hr /> -->
                    <br />



</body>
</html>