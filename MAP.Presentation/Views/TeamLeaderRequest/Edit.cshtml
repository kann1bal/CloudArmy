@model MAP.Presentation.Models.RequestVM


@{

    Layout = "~/Views/Shared/LayoutTeamLeader.cshtml";
}

<div class="span9">
    <div class="content">
        <div class="module">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <Center><h1>Request Creation</h1></Center>
                    <hr />
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <strong>Pick the request status :) </strong>
                    </div>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.RequestId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10" style="margin-left:180px;">
                            @Html.EnumDropDownListFor(model => model.Status)
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <center><input type="submit" value="Edit" class="btn btn-default" href="@Url.Action("Table", "TeamLeaderRequest")"/></center>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div><!--/.content-->
</div><!--/.span9-->
        </div>
        </div><!--/.container-->
    </div><!--/.wrapper-->
