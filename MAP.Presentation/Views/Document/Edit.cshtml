@model MAP.Presentation.Models.DocumentVM

@{
    Layout = "~/Views/Shared/LayoutTeamLeader.cshtml";
}

@{
    ViewBag.Title = "Edit";
}



<div class="span9">
    <div class="content">
        <div class="module">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2 class="align-center">Edit Document</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })




                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />

                <div class="form-group">
                    @Html.LabelFor(model => model.Size, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.TypeVm, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(model => model.TypeVm, "Please select Type")
                        @Html.ValidationMessageFor(model => model.TypeVm, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />


                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <p class="align-center">
                            <input type="submit" value="Save" class="btn btn-default" href="@Url.Action("Index", "Document")" />
                        </p>
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>