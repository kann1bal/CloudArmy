@model MAP.Presentation.Models.DocumentVM
@{
    Layout = "~/Views/Shared/LayoutTeamLeader.cshtml";
}

@{
    ViewBag.Title = "Details";
}
<div class="span9">
    <div class="content">
        <div class="module">
            <h2>Details</h2>

            <div>
                
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.DateDoc)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DateDoc)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Size)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Size)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.TypeVm)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TypeVm)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ImageUrl)
                    </dt>

                    <dd>
                        @if (Model.Extension == ".pdf")
                        {
                            <img src="~/Content/Upload/pdf.png" width="50" height="50" />
                        }
                        else if (Model.Extension == ".docx")
                        {
                            <img src="~/Content/Upload/docx.png" width="50" height="50" />
                        }
                        else
                        {
                            <img src="@Url.Content("~/Content/Upload/" + Model.ImageUrl)" width="50" height="50" />
                        }
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ProjectNames)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ProjectNames)
                    </dd>

                </dl>
            </div>
            <p class="align-center">
                @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
                @Html.ActionLink("Back to List", "Index")
                @Html.ActionLink("Download", "Download")
            </p>
        </div>
    </div>
</div>