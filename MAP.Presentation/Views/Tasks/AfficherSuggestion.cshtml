@model IEnumerable<MAP.Domain.Entities.Tasks>

@{
    Layout = "~/Views/Shared/LayoutMember.cshtml";

}
<div class="span9">
    <div class="content">

        <div class="module">
            <div class="module-head">
                <h2 class="align-center">Suggested Tasks</h2>
               

                <p class="align-right">
                    @Html.ActionLink("Create task", "Create", new { ProjectId = ViewBag.id })
                </p>

            </div>



 
    <table class="table">
        <tr>


            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.complexity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estimation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.startDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deadline)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>

            <td>
                @item.Description
            </td>
            <td>
                @item.complexity
            </td>
            <td>
                @item.estimation
            </td>
            <td>
                @item.startDate.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.deadline.ToString("dd/MM/yyyy")
            </td>


            <td>
                @Html.ActionLink("Edit", "EditSugg", new { id=item.taskId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.taskId })
            </td>
        </tr>
    }

    </table>
        </div>
</div>
</div>