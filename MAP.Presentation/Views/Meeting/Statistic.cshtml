@model IEnumerable<MAP.Presentation.Models.MeetingVM>

@{

    Layout = "~/Views/Shared/LayoutTeamLeader.cshtml";
}


    
    <div class="span9">
        <div class="content">
            <div id="module" class="module" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto">
                <center>  <h2>Statistics</h2> </center>
                <p class="align-center">
                    <br />
                    <br />
                    <br />
                  
                    <table class="table table-bordered table-condensed table-hover table-striped" style="min-width: 200px; height: 200px; max-width: 200px; margin: 0 auto">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Today</th>
                                <th>To come</th>
                                <th>Already passed</th>
                                <th>Total</th>

                            </tr>
                            <tr>
                                <th>Meeting</th>
                                <th id="p1"></th>
                                <th id="p2" Align="center"></th>
                                <th id="p3" Align="center"></th>
                                <th id="p4" Align="center"></th>

                            </tr>
                        </thead>
                        <tbody> </tbody>
                    </table>
                </p>
            </div>
            <br />
            <br />
            

                
                <script>

                        $(document).ready(function () {
                            $.getJSON("/Meeting/GetNumber", function (data) {

                                document.getElementById("p1").innerHTML = data.today;
                                document.getElementById("p2").innerHTML = data.tocome;
                                document.getElementById("p3").innerHTML = data.done;
                                document.getElementById("p4").innerHTML = data.total;


                            });
                        });
                </script>

            

        </div><!--/.content-->
    </div><!--/.span9-->
   
    
    <script src="~/Assets/Manager/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/Assets/Manager/scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="~/Assets/Manager/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Assets/Manager/scripts/flot/jquery.flot.js" type="text/javascript"></script>



